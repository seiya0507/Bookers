<% if @book.errors.any? %>
 <div id="error_explanation">
   <h2 class="error-text"><%= pluralize(@book.errors.count, "error") %></h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
 </div>
<% end %>



<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch  do |f| %>


<div class="edit-body">
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
</div>

<div class="submit">
 <%= f.submit 'Update Book' %>
</div>

<% end %>



<div class="edit-link">
<%= link_to "Show", book_path(@book.id) %>

|

<a class="back" href="/books">Back</a>
</div>
